<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbg">


    <Button
        android:id="@+id/btnPostReview"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:background="@drawable/writing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192"
        android:onClick="Form_postR"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="152dp"
        android:layout_height="27dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/fugaz_one"
        android:text="Post A Review"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0745DF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <Button
        android:id="@+id/btnBrowseReview"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:background="@drawable/testimonials"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.692"
        tools:targetApi="lollipop"
        android:onClick="Form_browseR"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="177dp"
        android:layout_height="27dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/fugaz_one"
        android:text="Browse Reviews"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0745DF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.801" />
</androidx.constraintlayout.widget.ConstraintLayout>