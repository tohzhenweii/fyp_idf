<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/elm_splash"
    android:orientation="vertical">

    <Button
        android:id="@+id/Btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/redround"
        android:fontFamily="sans-serif-medium"
        android:onClick="back"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10sp"
        android:paddingLeft="10sp">


        <Button
            android:id="@+id/fav"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/heart"
            android:onClick="Form_Fav" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/aldrich"
            android:lineSpacingExtra="8sp"
            android:onClick="Form_Fav"
            android:text="Favourites"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10sp"
        android:paddingLeft="10sp">

        <Button
            android:id="@+id/starred"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/star"
            android:onClick="Form_Star" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/aldrich"
            android:onClick="Form_Star"
            android:text="Starred"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10sp"
        android:paddingLeft="10sp">

        <Button
            android:id="@+id/want_togo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/compass"
            android:onClick="Form_Wanttogo" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/aldrich"
            android:onClick="Form_Wanttogo"
            android:text="Want To Go"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:paddingLeft="10sp">

        <Button
            android:id="@+id/want_toreview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/review"
            android:onClick="reviewMethod" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/aldrich"
            android:onClick="reviewMethod"
            android:text="Review"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/hammersmith_one"
        android:text="Categories"
        android:textAllCaps="true"
        android:textColor="#0E42AC"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <ListView
        android:id="@+id/listVenue"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>
